#!/bin/bash

set -e

docker-compose run --rm php74 bin/test
docker-compose run --rm php80 bin/test
docker-compose run --rm php81 bin/test
SYMFONY_VERSION="5.4.*" docker-compose run --rm php74 bin/test
SYMFONY_VERSION="5.4.*" docker-compose run --rm php80 bin/test
SYMFONY_VERSION="5.4.*" docker-compose run --rm php81 bin/test
SYMFONY_VERSION="6.0.*" docker-compose run --rm php80 bin/test
SYMFONY_VERSION="6.0.*" docker-compose run --rm php81 bin/test